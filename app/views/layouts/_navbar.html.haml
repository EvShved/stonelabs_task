.navbar.navbar-inverse{ role: 'navigation' }
  .container
    .navbar-header
      = link_to 'Stone Labs', root_path, class: 'navbar-brand'
    %ul.nav.navbar-nav
      - unless user_signed_in?
        %li= link_to 'Sign in', user_session_path
        %li= link_to 'Sign up', new_user_registration_path
    %ul.nav.navbar-nav.pull-right
      - if user_signed_in?
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle',
                         data: { toggle: 'dropdown' },
                         role: 'button',
                         aria: { expanded: 'false' } do
            Account
            %span.caret
          %ul.dropdown-menu{ role: 'menu' }
            %li= link_to 'Settings', '#'
            %li= link_to 'My Questions', '#'
            %li= link_to 'Sign Out',
                          destroy_user_session_path,
                          data: { method: :delete }
